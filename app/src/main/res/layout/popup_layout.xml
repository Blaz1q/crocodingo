<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="350dp"
    android:layout_height="250dp"
    android:background="@color/cklightgray"
    android:padding="5dp">
        <ImageView
            android:id="@+id/czapa_image"
            android:layout_width="129dp"
            android:layout_height="120dp"
            android:layout_above="@id/kup_czapa"
            android:layout_marginTop="34dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/czapa_nazwa"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="176dp"
            android:gravity="center"
            android:text="Nazwa czapki"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/czapa_opis"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_above="@id/kup_czapa"
            android:layout_toRightOf="@id/czapa_image"
            android:gravity="center"
            android:text="Opis czapki"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <Button
            android:id="@+id/kup_czapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:backgroundTint="#333333"
            android:onClick="Zamknij_Popup"
            android:text="Zamknij" />

    </RelativeLayout>
