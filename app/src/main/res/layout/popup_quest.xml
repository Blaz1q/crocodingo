                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/nagrodashadow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nagrodaimg3"

                    android:fontFamily="@font/londrina_shadow"
                    android:text="+2000"
                    android:textAlignment="center"
                    android:textColor="@color/ckbez"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/quest3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/claim3"
                    android:layout_toRightOf="@id/nagrodaimg3"
                    android:padding="10dp"
                    android:paddingEnd="5dp"
                    android:text="quest1"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/questcomplete3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/claim3"
                    android:scaleType="fitEnd"
                    android:src="@drawable/done"
                    android:visibility="gone" />


                <Button
                    android:id="@+id/claim3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/gray_active"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="@string/claim" />
                <RelativeLayout
                    android:id="@+id/confettireward3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/nagroda3"
                    android:layout_alignParentTop="true"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/questcompletion3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:text="(1/10)"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <ProgressBar
                android:id="@+id/DailyQuest3"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/container3"
                android:max="10"
                android:minHeight="14dp"
                android:progress="6"
                android:progressDrawable="@drawable/custom_progressbar"
                android:progressTint="@color/ckred" />
        </RelativeLayout>

        <Button
            android:id="@+id/welcome_button_testy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:backgroundTint="#333333"
            android:onClick="Zamknij_Popup"
            android:text="Zaczynajmy!" />


    </LinearLayout>
</RelativeLayout>