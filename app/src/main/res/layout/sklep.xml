            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:id="@+id/a"
                    android:layout_width="200dp"
                    android:layout_height="100dp"

                    android:src="@drawable/czapa_1"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/a"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/zolta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nazwa: Żółta Czapa " />

                    <TextView
                        android:id="@+id/zoltacena"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cena: 2150" />

                    <Button
                        android:id="@+id/kup_czapka0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="#333333"
                        android:text="Kup"
                        android:onClick="pokazPopupZakupuCzapek"/>
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/b"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:src="@drawable/czapa_2"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/b"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/zielona"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nazwa: Zielona Czapa " />

                    <TextView
                        android:id="@+id/zielonacena"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cena: 2150" />

                    <Button
                        android:id="@+id/kup_czapka1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="#333333"
                        android:text="Kup"
                        android:onClick="pokazPopupZakupuCzapek"/>
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_marginBottom="5dp"
