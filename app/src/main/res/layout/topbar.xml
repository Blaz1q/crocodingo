<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topbar"
    android:background="@android:color/transparent"
    android:layout_marginTop="40dp"
    >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_alignParentRight="true"
    android:background="@android:color/transparent"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/custom_container"
        android:padding="2dp"
        android:layout_marginRight="5dp"
        >
        <ImageView
            android:id="@+id/nagrodaimg1"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/crococoin"
            />

        <TextView
            android:id="@+id/topbartext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/nagrodaimg1"
            android:fontFamily="@font/londrina_solid"
            android:text="+2000"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_marginRight="10dp"
            android:paddingLeft="20dp"
            />

        <TextView
            android:id="@+id/topbartextshadow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/nagrodaimg1"
            android:fontFamily="@font/londrina_outline"
            android:text="+2000"
            android:textColor="@color/ckbez"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/custom_container"
        android:padding="2dp"
        android:layout_marginRight="5dp"
        >
        <ImageView
            android:id="@+id/nagrodaimg2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/xp"
            />

        <TextView
            android:id="@+id/topbartext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/nagrodaimg2"
            android:fontFamily="@font/londrina_solid"
            android:text="+200"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_marginRight="10dp"
            android:paddingLeft="20dp"
            />

        <TextView
            android:id="@+id/topbartextshadow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/nagrodaimg2"
            android:fontFamily="@font/londrina_outline"
            android:text="+200"
            android:textColor="@color/ckbez"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
</LinearLayout>


</RelativeLayout>