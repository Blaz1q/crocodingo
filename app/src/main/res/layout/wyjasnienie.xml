<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/hiddentop"
        android:orientation="horizontal"
        ></LinearLayout>

    <Button
        android:id="@+id/wroc_do_pytania"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hiddentop"
        android:backgroundTint="#333333"
        android:onClick="Zmien_widoki"
        android:text="Wróć do pytania" />

    <ImageView
        android:id="@+id/wyjasnienie_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/wroc_do_pytania"
        android:layout_marginBottom="20dp"
        />
</RelativeLayout>